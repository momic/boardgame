{
  "manifest_version": 2,

  "name": "Chrome Chess",
  "description": "This extension enables you to quickly play chess online and be notified upon oponent move",
  "version": "0.1.3",
  "icons": {
    "16": "images/icon.png",
    "32": "images/icon_32.png",
    "64": "images/icon_64.png",
    "128": "images/icon_128.png",
    "256": "images/icon_256.png"
  },
  "browser_action": {
    "default_icon": "images/icon.png",
    "default_popup": "popup.html",
    "default_title": "Chrome Chess"
  },
  "author": "Zlatan Momic",
  "background": {
    "scripts": [
      "js/socket.io-1.2.0.js",    
      "js/config.js",
      "js/extension_background.js"
    ]
  }
}
