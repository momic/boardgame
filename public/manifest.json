{
  "manifest_version": 2,

  "name": "Chrome Chess",
  "description": "This extension enables you to quickly play chess online and be notified upon oponent move",
  "version": "1.0",
  "icons": {
    "16": "images/icon.png",
    "32": "images/icon_32.png",
    "64": "images/icon_64.png"
  },
  "browser_action": {
    "default_icon": "images/icon.png",
    "default_popup": "popup.html",
    "default_title": "Chrome Chess"
  },
  "background": {
    "scripts": [
      "js/jquery-1.11.3.min.js",
      "js/bootstrap-3.3.5.min.js",
      "js/socket.io-1.2.0.js",
    
      "js/config.js",
      "js/inheritance_lib.js",
      "js/entity.js",
      "js/button.js",
      "js/menu.js",
      "js/status_box.js",
      "js/active_entity.js",
      "js/tile.js",
      "js/gameboard.js",
      "js/sprite.js",
      "js/sprite_repository.js",
      "js/screen.js",
      "js/screen_repository.js",

      "js/player.js",
      "js/game_screen.js",
      "js/game_loop.js"
    ]
  },
  "content_security_policy": "script-src 'self' https://ajax.googleapis.com https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js https://cdn.socket.io/socket.io-1.2.0.js; object-src 'self'",
  "permissions": [
    "background",
    "https://ajax.googleapis.com/",
    "https://maxcdn.bootstrapcdn.com/",
    "https://cdn.socket.io/"
  ]
}

